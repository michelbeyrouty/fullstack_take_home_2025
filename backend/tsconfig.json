{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": [
      "es2016",
      "es2017.string",
      "esnext.asynciterable"
    ],
    "strict": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
